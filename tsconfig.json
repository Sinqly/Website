{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "module": "CommonJS",
    "baseUrl": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true
  }
}
